<%= render "shared/navbar" %>

<div class="container">
  <div class="col-md-6 offset-md-3">
    <div class="card post">
      <div class="card-body">
        <h2>新規投稿</h2>
        <%= form_with model: @posts_member, url: posts_path, local: true do |f| %>

          <%= render "shared/error_messages", model: f.object %>

          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control" %>
            <div id="img-prev">
            </div>
          </div>
          <div class="form-group">
            <%= f.label :"text" %>
            <%= f.text_field :text, class: "form-control" %>
          </div>
          <div class="form-group d-flex flex-column">
            <%= f.label :"Members" %>
            <%= f.collection_check_boxes(:member_ids, Member.where.not(id: 1), :id, :name, include_hidden: false) do |b| %>
              <%= b.label { b.check_box + b.text} %>
            <% end %>
          </div>
          <%= f.submit "投稿する", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>