<%# ヘッダーナビ %>
<%= render "shared/navbar" %>

<div class="container mt-5">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 pt-3">
        <div class="card post">
          <div class="card-body">
            <%= image_tag post.image, class: "post-img" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>