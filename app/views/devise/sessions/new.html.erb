<div class="container">
  <div class="mx-auto mt-5 border border-secondary text-center" style="width: 350px">
    <h2 class="mx-auto pt-5" style="width: 200px">Bishgram</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <div class="field mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"%>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <div class="mt-3">
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>
