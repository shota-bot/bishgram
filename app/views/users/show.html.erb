<%= render "shared/navbar" %>
<div class="container">
  <div class="row">
    <div class="col-8 offset-2 user-area">
      <div class="row h-100">
        <div class="col-6">
          <h3 class="mt-5">清掃員名</h3>
          <h1><%= @user.nickname %></h1>
        </div>
        <div class="col-6">
          <h3 class="mt-5" >投稿数</h3>
          <h1><%= @user.posts.count %></h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container user-posts">
  <h4>過去の投稿</h4>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 col-sm-6">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, class: "post-img m-3" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>